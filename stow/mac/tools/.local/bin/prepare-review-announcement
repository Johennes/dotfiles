#!/bin/bash

if [[ ! -d "$REVIEW_DRIVE" ]]; then
    echo "Error: REVIEW_DRIVE environment variable not set"
    exit 1
fi

if [[ ! -d "$REVIEW_WIKI" ]]; then
    echo "Error: REVIEW_WIKI environment variable not set"
    exit 1
fi

echo "The next public iOS review takes place Wednesday, ... at 3:30pm CET."
echo
echo "*Agenda*"
echo
echo "- @dev: ... (MOB-...)"
echo
echo "*Calendar event*"
echo
echo "..."
echo
echo "Slides and recordings are made available in Google Drive after the meeting ($REVIEW_DRIVE)."
echo
echo "For further details see $REVIEW_WIKI."
